<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Сброс пароля</title>
  <link href="/vendor/bootstrap/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h1 class="h4 mb-3">Сброс пароля</h1>
            <% if (typeof error === 'string' && error) { %>
            <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form method="post" action="/reset" class="vstack gap-3">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <input type="hidden" name="token" value="<%= token %>">
              <div>
                <label class="form-label">Новый пароль</label>
                <input class="form-control" type="password" name="password" required minlength="8">
                <div class="form-text">Пароль от 8 символов, с буквами и цифрой или спецсимволом.</div>
              </div>
              <div>
                <label class="form-label">Подтверждение пароля</label>
                <input class="form-control" type="password" name="confirm" required minlength="8">
              </div>
              <div class="d-flex gap-2">
                <button class="btn btn-primary" type="submit">Сохранить пароль</button>
                <a class="btn btn-outline-secondary" href="/login">Отмена</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/vendor/bootstrap/bootstrap.bundle.min.js"></script>
  </body>
  </html>
